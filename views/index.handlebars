<h1>Burgers!</h1>

<div class="container" id="burgers">
  <div class="row">
    <div class="col-6" id="not-devoured">

      <h2>Burgers that are not devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/Burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6" id="devoured">
      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/Burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="container" id="search">
  <div class="row">
    <div class="col">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button id="submit-button" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>